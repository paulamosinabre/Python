#1
num1 = int(input("Enter a number: "))
sum_numbers = 0

for i in range(1, num1 + 1):
    sum_numbers += i

print("summation: ", sum_numbers)

#2 
num2 = int(input("Enter a number: "))
factorial = 1

for i in range(1, num2 + 1):
    factorial *= i

print("Factorial: ", factorial)

#3 
numStart = int(input("Enter start: "))
numStop = int(input("Enter stop: "))
print("Even numbers: ")
for x in range (numStart, numStop):
    if x % 2 == 0:
        print(x)
    
